<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<style>
    /* --- 1. GLOBAL STYLES --- */
    * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Segoe UI', sans-serif; }
    html { scroll-behavior: smooth; }
    body { background-color: #ffffff; height: 200vh; }

    /* --- 2. CENTERED NAVBAR WITH LOAD ANIMATION --- */
    .navbar {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        height: 60px;
        background-color: #a9a8a8;
        border-radius: 50px;
        display: flex;
        align-items: center;
        z-index: 1000;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        overflow: hidden; /* Clips content during growth */
        
        /* Initial Animation State */
        width: 0;
        opacity: 0;
        animation: expandNav 3.6s cubic-bezier(0.22, 1, 0.36, 1) forwards;
        animation-delay: 1.6s;

    }

    /* Nav container fade-in happens after the bar expands */
    .nav-container {
        width: 100%;
        display: grid;
        grid-template-columns: 1fr auto 1fr; 
        align-items: center;
        padding: 0 25px;
        opacity: 0;
        animation: fadeInContent 0.6s ease forwards;
        animation-delay: 0.8s;
    }

    /* --- KEYFRAMES --- */
    @keyframes expandNav {
        0% { width: 0%; opacity: 0; }
        100% { width: 95%; max-width: 1000px; opacity: 1; }
    }

    @keyframes fadeInContent {
        to { opacity: 1; }
    }

    /* --- ICONS & LINKS --- */
    .home-icon { 
        color: #333; 
        display: flex; 
        justify-self: start; 
        text-decoration: none; 
        cursor: pointer; 
        transition: color 0.3s;
    }

    .home-icon.active { color: purple !important; }

    .nav-links {
        display: flex;
        list-style: none;
        gap: 25px;
        align-items: center;
        justify-self: center;
    }

    .nav-link {
        text-decoration: none;
        color: #333;
        font-weight: 600;
        font-size: 15px;
        padding-bottom: 4px;
        transition: all 0.3s ease;
        cursor: pointer;
        border-bottom: 2px solid transparent;
        white-space: nowrap;
    }

    .nav-link.active {
        color: purple !important;
        border-bottom: 2px solid purple !important;
    }

    .nav-link:hover { color: purple !important; }

    /* --- 3. EXPANDING CONTACT LOGIC --- */
    .contact-item {
        display: flex;
        align-items: center;
        overflow: hidden;
        max-width: 70px;
        transition: max-width 1s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .contact-item.expanded {
        max-width: 300px;
    }

    .social-icons {
        display: flex;
        gap: 15px;
        margin-left: 15px;
        padding-right: 10px;
        opacity: 0;
        transform: translateX(-10px);
        transition: all 0.3s ease 0.1s;
    }

    .contact-item.expanded .social-icons {
        opacity: 1;
        transform: translateX(0);
    }

    .social-icons a {
        text-decoration: none;
        color: #333;
        font-size: 18px;
        transition: color 0.2s, transform 0.2s;
    }

    .social-icons a:hover {
        color: purple;
        transform: scale(1.2);
    }

    .spacer { width: 24px; justify-self: end; } 
</style>

<nav class="navbar">
    <div class="nav-container">
        <a href="#home" class="home-icon" onclick="setActive(this, '#home', event)">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
        </a>

        <ul class="nav-links">
            <li><a href="#projects" class="nav-link" onclick="setActive(this, '#projects', event)">Projects</a></li>
            <li><a href="#experience" class="nav-link" onclick="setActive(this, '#experience', event)">Experience</a></li>
            <li><a href="#education" class="nav-link" onclick="setActive(this, '#education', event)">Education</a></li>
            
            <li class="contact-item" id="contactWrapper" onmouseenter="toggleContact(event, this)" onmouseleave="handleContactMouseLeave()">
                <a href="javascript:void(0)" style="margin-top: 5px;" class="nav-link" id="contactBtn">Contact</a>
                <div class="social-icons">
                    <a href="#" title="LinkedIn"><i class="fa-brands fa-linkedin-in"></i></a>
                    <a href="#" title="GitHub"><i class="fa-brands fa-github"></i></a>
                    <a href="#" title="Email"><i class="fa-solid fa-envelope"></i></a>
                </div>
            </li>
        </ul>

        <div class="spacer"></div>
    </div>
</nav>

<script>
    function setActive(element, name, event) {
        event.preventDefault();
        window.location.hash = name;
        
        // Remove 'active' from all links and the home icon
        document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
        document.querySelector(".home-icon").classList.remove('active');
        
        // Collapse Contact menu
        document.getElementById('contactWrapper').classList.remove('expanded');
        
        // Set active to current element
        element.classList.add('active');
    }

    function toggleContact(event, element) {
        // Toggle the horizontal width expansion class
        const wrapper = document.getElementById('contactWrapper');
        wrapper.classList.add('expanded');
    }

    function handleContactMouseLeave() {
        const wrapper = document.getElementById('contactWrapper');
        wrapper.classList.remove('expanded');
        
        // Only remove purple if 'Contact' isn't the current active page
        // (Usually Contact doesn't have a hash in your logic, so we remove it)
        document.getElementById('contactBtn').classList.remove('active');
    }
</script>