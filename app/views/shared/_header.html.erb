<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<style>
    /* --- 1. GLOBAL STYLES --- */
    * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Segoe UI', sans-serif; }
    html { scroll-behavior: smooth; }

    /* --- 2. CENTERED NAVBAR WITH LOAD ANIMATION --- */
    .navbar {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        height: 60px;
        background-color: #a9a8a8;
        border-radius: 50px;
        display: flex;
        align-items: center;
        z-index: 1000;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        overflow: hidden; /* Clips content during growth */
        
        /* Initial Animation State */
        width: 0;
        opacity: 0;
        animation: expandNav 3.6s cubic-bezier(0.22, 1, 0.36, 1) forwards;
        animation-delay: 1.6s;

    }

    /* Nav container fade-in happens after the bar expands */
    .nav-container {
        width: 100%;
        display: grid;
        grid-template-columns: 1fr auto 1fr; 
        align-items: center;
        padding: 0 25px;
        opacity: 0;
        animation: fadeInContent 0.6s ease forwards;
        animation-delay: 0.8s;
    }

    /* --- KEYFRAMES --- */
    @keyframes expandNav {
        0% { width: 0%; opacity: 0; }
        100% { width: 95%; max-width: 1000px; opacity: 1; }
    }

    @keyframes fadeInContent {
        to { opacity: 1; }
    }

    /* --- ICONS & LINKS --- */
    .home-icon { 
        display: flex; 
        justify-self: start; 
        text-decoration: none; 
        cursor: pointer; 
        transition: color 0.3s;
        transform: scale(1.3);
    }

    .home-icon.active{
        fill: purple !important;
        color: purple !important;
    }

    .nav-links {
        display: flex;
        list-style: none;
        gap: 25px;
        align-items: center;
        justify-self: center;
    }

    .nav-link {
        text-decoration: none;
        color: #333;
        font-weight: 600;
        font-size: 15px;
        padding-bottom: 4px;
        transition: all 0.3s ease;
        cursor: pointer;
        border-bottom: 2px solid transparent;
        white-space: nowrap;
    }

    .nav-link.active {
        color: purple !important;
        border-bottom: 2px solid purple !important;
    }

    .nav-link:hover { color: purple !important; }

    /* --- 3. EXPANDING CONTACT LOGIC --- */
    .contact-item {
        display: flex;
        align-items: center;
        overflow: hidden;
        max-width: 70px;
        transition: max-width 1s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .contact-item.expanded {
        max-width: 300px;
    }

    .social-icons {
        display: flex;
        gap: 15px;
        margin-left: 15px;
        padding-right: 10px;
        opacity: 0;
        transform: translateX(-10px);
        transition: all 0.3s ease 0.1s;
    }

    .contact-item.expanded .social-icons {
        opacity: 1;
        transform: translateX(0);
    }

    .social-icons a {
        text-decoration: none;
        color: #333;
        font-size: 18px;
        transition: color 0.2s, transform 0.2s;
    }

    .social-icons a:hover {
        color: purple;
        transform: scale(1.2);
    }

    .resume-icon {
        color: #333; 
        display: flex; 
        justify-self: end; 
        text-decoration: none; 
        cursor: pointer; 
        transition: color 0.3s;
        transform: scale(1.3);
    }

    .home-icon:hover,
    .resume-icon:hover{
        transform: scale(1.4);
    }

    .spacer { width: 24px; justify-self: end; } 
</style>


<nav class="navbar">
    <div class="nav-container">
        <i class="fa-solid fa-house home-icon" onclick="setActive(this, '#home', event)"></i>

        <ul class="nav-links">
            <li><a href="#projects" class="nav-link" onclick="setActive(this, '#projects', event)">Projects</a></li>
            <li><a href="#experience" class="nav-link" onclick="setActive(this, '#experience', event)">Experience</a></li>
            <li><a href="#education" class="nav-link" onclick="setActive(this, '#education', event)">Education</a></li>
            
            <li class="contact-item" id="contactWrapper" onmouseenter="toggleContact(event, this)" onmouseleave="handleContactMouseLeave()">
                <a href="javascript:void(0)" style="margin-top: 5px;" class="nav-link" id="contactBtn">Contact</a>
                <div class="social-icons">
                    <a onclick="window.open('https://www.linkedin.com/in/ayush-lahiri')" title="LinkedIn"><i class="fa-brands fa-linkedin-in"></i></a>
                    <a onclick="window.open('https://github.com/ayushL2007')"  title="GitHub"><i class="fa-brands fa-github"></i></a>
                    <a href="mailto:ayushlahiri2007@gmail.com"  title="Email"><i class="fa-solid fa-envelope"></i></a>
                </div>
            </li>
        </ul>
            <i class="fa-regular fa-file-lines resume-icon"
            onclick="window.open('/resume', '_blank')" title="Resume"></i>
        <div class="spacer"></div>
    </div>
</nav>
<script>
    // 1. NAVIGATION LOGIC (No Audio trigger here)
    function setActive(element, name, event) {
        if (event) event.preventDefault();
        
        // Update URL hash without snap
        history.pushState(null, null, name);
        
        // Smooth scroll to target
        const target = document.querySelector(name);
        if (target) {
            target.scrollIntoView({ 
                behavior: 'smooth',
                block: 'start'
            });
        }

        // Update the purple active state
        updateNavbarUI(name.replace('#', ''));
    }

    // 2. UI UPDATE LOGIC (Controls the purple color)
    function updateNavbarUI(id) {
        // Clear all active states
        document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
        const homeIcon = document.querySelector(".home-icon");
        if(homeIcon) homeIcon.classList.remove('active');

        // Apply new active state
        if (id === 'home') {
            if(homeIcon) homeIcon.classList.add('active');
        } else {
            const activeLink = document.querySelector(`.nav-link[href="#${id}"]`);
            if (activeLink) activeLink.classList.add('active');
        }
    }

    // 3. CONTACT MENU LOGIC
    function toggleContact(event, element) {
        document.getElementById('contactWrapper').classList.add('expanded');
    }

    function handleContactMouseLeave() {
        document.getElementById('contactWrapper').classList.remove('expanded');
    }

    // 4. SCROLL OBSERVER (The "Auto-Change URL" logic)
    document.addEventListener("DOMContentLoaded", () => {
        // Target your specific section IDs
        const sections = document.querySelectorAll('#home, #projects, #experience, #education');

        const scrollOptions = {
            root: null,
            rootMargin: '-45% 0px -45% 0px', // Updates URL when section is in the center
            threshold: 0
        };

        const urlObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const id = entry.target.id;
                    if (id) {
                        history.replaceState(null, null, `#${id}`);
                        updateNavbarUI(id);
                    }
                }
            });
        }, scrollOptions);

        sections.forEach(section => urlObserver.observe(section));
    });
</script>