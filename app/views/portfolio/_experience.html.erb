<style>
    /* --- SHARED BASE STYLE --- */
    .timeline-section {
        max-width: 900px;
        margin: 80px auto; /* Consistent margin for both sections */
        padding: 0 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .section-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 60px;
        color: #2d3436;
    }

    .timeline {
        position: relative;
        border-left: 3px solid #dfe6e9;
        margin-left: 30px;
        padding-left: 40px;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 50px;
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        will-change: opacity, transform;
    }

    .timeline-dot {
        position: absolute;
        left: -51.5px;
        top: 5px;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        border: 4px solid #fff;
    }

    .timeline-date {
        font-weight: bold;
        margin-bottom: 10px;
        color: #6c5ce7; /* Default Purple from Experience */
    }

    .timeline-content {
        background: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
    }

    .timeline-content h3 { margin: 0; font-size: 1.5rem; }
    .timeline-content h4 { margin: 5px 0; color: #636e72; font-weight: 500; }
    
    /* List styles inside content */
    .timeline-content ul { margin: 10px 0 0 20px; padding: 0; }
    .timeline-content li { margin-bottom: 5px; color: #444; }

    /* --- THEME OVERRIDES --- */

    /* Experience Specifics */
    #experience .timeline-dot {
        background-color: #e75c5c;
        box-shadow: 0 0 0 3px #e75c5c;
    }

    /* Education Specifics */
    #education .timeline { border-left-color: #ced4da; }
    #education .timeline-date { color: #8b0000; } /* Maroon Date */
    #education .timeline-dot {
        background-color: #8b0000; /* Deep Maroon Dot */
        box-shadow: 0 0 0 3px #8b0000;
    }

    /* Animation State */
    .timeline-item.revealed {
        opacity: 1 !important;
        transform: translateY(0) !important;
    }
</style>

<section class="timeline-section" id="experience">
