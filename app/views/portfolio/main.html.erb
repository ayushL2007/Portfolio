<style>
    body {
        background-color: #f0f0f0;
        margin: 0;
        display: flex;
        flex-direction: column; /* This ensures sections stack vertically */
        align-items: center;    /* Centers the sections horizontally */
        min-height: 100vh;
        overflow-x: hidden;
    }

    .home {
        display: block;
        padding-top: 10vh; 
        width: 100%;
        margin-left: 20%;
        max-width: 1200px; /* Limits width for better readability */
        transform: scale(1.1); 
        animation: revealAndScale 2.2s ease-out forwards;
        margin-bottom: 100px; /* Space before the next section */
    }

    @keyframes revealAndScale {
        0% {
            opacity: 0;
            transform: scale(1.1);
        }
        60%{
            transform: scale(1.08);
            opacity: 0.5;
        }
        100% {
            opacity: 1;
            transform: scale(1); /* Settles to original size */
        }
    }

    .writing-container {
        width: 43vw; 
        max-width: 1300px;
        text-align: left;
    }

    /* THE ANIMATION */
    .cursive-path {
        stroke-dasharray: 5100;
        stroke-dashoffset: 5100;
        animation: write 8s ease-in-out forwards;
        stroke: url(#silverGradient); /* This links to the gradient below */
        stroke-width: 0.8; 
        fill: none;
        stroke-linecap: round;
        stroke-linejoin: round;
    }

    @keyframes write {
        to { stroke-dashoffset: 0; }
    }

    /* THE LAYOUT */
    .content-row {
        display: flex;
        gap: 30px;
        margin-top: 20px;
        align-items: flex-start;
    }

    .text-section {
        flex: 10;
        max-width: 50%;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 150%;
        color: #555;
        margin-top: 1%;
        line-height: 1.6;
    }

    .photo-frame {
        flex: 20;
        max-width: 400px;
        aspect-ratio: 1 / 1;
        border: 8px solid white;
        background: #e0e0e0;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 20px;
        overflow: hidden;
        position: relative; /* Added to allow absolute positioning of the tag */
    }

    .photo-frame img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Initial state: elements are in their normal position */
    .text-section, .photo-frame {
        transition: transform 0.8s cubic-bezier(0.25, 1, 0.5, 1), opacity 0.8s ease;
        will-change: transform, opacity;
    }

    /* Scrolled state: Text moves left, Photo moves right, both fade slightly */
    .scrolled-out .text-section {
        transform: translateX(-150px);
        opacity: 0;
    }

    .scrolled-out .photo-frame {
        transform: translateX(150px);
        opacity: 0;
    }
</style>

